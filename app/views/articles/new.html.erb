<div class='w-100 d-flex justify-content-center mt-5'>
    <%= form_with model: @article, class: 'w-75', local: true do |f| %>
        <div class='form-group d-flex flex-column'>
            <%= f.label :タイトル, class: 'form-label' %>
            <%= f.text_field :title, class: 'form-conrol' %>
        </div>
        <div class='form-group d-flex flex-column mt-5'>
            <%= f.label :本文, class: 'form-label' %>
            <%= f.text_area :body, rows: 10, placeholder: "マークダウン形式可。", class: 'form-control' %>
        </div>
        <%= f.submit "記事投稿", class: 'btn btn-primary mt-5' %>
    <% end %>  
</div>
